@page "/RestaurantDashboard/{RestaurantID:int}"
@rendermode InteractiveServer
@inject NavigationManager NavManager

<MudText Typo="Typo.h3" GutterBottom="true">@restaurant.Name</MudText>

    @* add menu *@
    <MudCard Class="mb-6">
        <MudCardContent>
            <MudText Typo="Typo.h5" GutterBottom="true">Add menu</MudText>
            <MudText Typo="Typo.body2">Add new menu with categories and items to your restaurant!</MudText>
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Text" Color="Color.Primary" @onclick="() => NavManager.NavigateTo(AddMenuPath)">Learn More</MudButton>
        </MudCardActions>
    </MudCard>

    @* add item *@
    <MudCard Class="mb-6">
        <MudCardContent>
            <MudText Typo="Typo.h5" GutterBottom="true">Add Item</MudText>
            <MudText Typo="Typo.body2">Add a new item to an existing menu or create a new one</MudText>
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Text" Color="Color.Primary" @onclick="() => NavManager.NavigateTo(AddItemPath)">Learn More</MudButton>
        </MudCardActions>
    </MudCard>

    @* modify menu *@
    <MudCard Class="mb-6">
        <MudCardContent>
            <MudText Typo="Typo.h5" GutterBottom="true">Modify menu</MudText>
            <MudText Typo="Typo.body2">Modify an existing menu</MudText>
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Text" Color="Color.Primary" @onclick="() => NavManager.NavigateTo(MenusPath)">Learn More</MudButton>
        </MudCardActions>
    </MudCard>

    @* Modify restaurant *@
    <MudCard Class="mb-6">
        <MudCardContent>
            <MudText Typo="Typo.h5" GutterBottom="true">Change restaurant settings</MudText>
            <MudText Typo="Typo.body2">Change restaurant name, email and address</MudText>
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Text" Color="Color.Primary" @onclick="() => NavManager.NavigateTo(UpdateRestaurantPath)">Learn More</MudButton>
        </MudCardActions>
    </MudCard>


