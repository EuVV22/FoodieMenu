@page "/Menus/{RestaurantID:int}"
@rendermode InteractiveServer
@inject NavigationManager NavManager

<MudText Typo="Typo.h4" GutterBottom="true">Choose menu to modify</MudText>
@foreach (var menu in menus) 
{
    <MudCard>
        <MudText Typo="Typo.h5">@menu.Name</MudText>
        <MudCardActions>
        <MudButton Variant="Variant.Filled" Color="Color.Secondary" OnClick="() => NavigateToEditMenuPage(menu.MenuID)">Edit Menu</MudButton>
        </MudCardActions>
    </MudCard>
}

