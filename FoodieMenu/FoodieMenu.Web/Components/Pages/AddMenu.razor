@page "/AddMenu"
@inject NavigationManager NavManager
@rendermode InteractiveServer

<MudItem xs="12" sm="7">
    <MudPaper Class="pa-4">
        <MudForm @ref="form">
            <MudTextField T="string" Label="RestaurantName" @bind-Value="RestaurantName" Required="true" RequiredError="Restaurant name is required!" />
            <MudTextField T="string" Label="RestaurantDescription" @bind-Value="RestaurantDescription" Required="false"/>
            <MudTextField T="string" Label="RestaurantEmail" @bind-Value="RestaurantEmail" Required="true" RequiredError="Restaurant email is required!" />
            
            <MudTextField T="string" Label="MenuName" @bind-Value="MenuName" Required="true" RequiredError="Menu name is required!" />
            <MudTextField T="string" Label="CategoryName" @bind-Value="CategoryName" Required="true" RequiredError="A category is required!" />
            <MudTextField T="string" Label="SubcategoryName" @bind-Value="SubcategoryName" Required="true" RequiredError="Subcategory name is required!" />
            
            <MudTextField T="string" Label="ItemName" @bind-Value="ItemName" Required="true" RequiredError="Item name is required!" />
            <MudTextField T="string" Label="ItemDescription" @bind-Value="ItemDescription" Required="true" RequiredError="Item name is required!" />
            <MudTextField T="double" Label="ItemPrice" @bind-Value="ItemPrice" Required="true" RequiredError="Item price is required!" />

            <MudButton Variant="Variant.Filled" Color="Color.Primary" @onclick="Test">Register</MudButton>
        </MudForm>
    </MudPaper>
</MudItem>
