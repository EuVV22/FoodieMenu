@page "/menu/{MenuID:int}"
@layout FoodieMenu.Web.Components.Layout.EmptyLayout
@rendermode InteractiveServer

@* Header restaurant description *@
<MudCard>
    <MudText Typo="Typo.h1" Align="Align.Center">@restaurantName</MudText>
    <MudSpacer />
    <MudText Typo="Typo.h3" Align="Align.Center">@menu.Name</MudText>
    <MudSpacer />
</MudCard>


@* Category tabs *@
<MudTabs Elevation="4" Rounded="true" Centered="true" Color="@Color.Primary">

    @* Category contents *@

    @foreach (var category in menu.Categories)
    {
        <MudTabPanel Text=@category.Name>
            <MudCard>
                @foreach (var item in category.Items)
                {
                    <MudPaper>
                        <MudPaper>
                            <MudText Typo="Typo.h5" Align="Align.Center">@item.Name</MudText>
                            <MudText Typo="Typo.body1" Align="Align.Center">@item.Description</MudText>
                            <MudText Typo="Typo.subtitle1" Align="Align.Right">Price: @item.Price</MudText>
                        </MudPaper>
                    </MudPaper>
                    <MudSpacer />
                }
            </MudCard>
        </MudTabPanel>
    }
</MudTabs>